include "common.fbs";
namespace MCFS;

enum Error:int32 {
    Unknown,
    UnknownCommand,
	NoGame,
	MalformedRequest,
	NoSuchEntity
}

table Response {
	error:Error = null;

	float:float = null;
	int:int = null;
	string:string;
	pos:Vec3;
}

table StateResponse {
    // null if not in game
    player_entity_id:int32 = null;
    entity_ids:[int32];
}

union GameResponseBody {Response, StateResponse}

table GameResponse {
    body:GameResponseBody (required);
}

root_type GameResponse;

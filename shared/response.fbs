namespace MCFS;

enum Error:int32 {
    Unknown,
    UnknownCommand,
	NoGame
}

struct Vec3 {
    x:double;
    y:double;
    z:double;
}

table Response {
	error:Error = null;

	float:float = null;
	int:int = null;
	string:string;
	pos:Vec3;
}

table StateResponse {
    is_in_game:bool;
}

union GameResponseBody {Response, StateResponse}

table GameResponse {
    body:GameResponseBody (required);
}

root_type GameResponse;

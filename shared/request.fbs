include "common.fbs";
namespace MCFS;

enum CommandType:int32 {
	PlayerName,
	EntityType,
	EntityPosition,
	EntityHealth,

	WorldTime,
}


table WriteBody {
	float:float = null;
	int:int = null;
	string:string;
	pos:Vec3;
}

table Command {
    cmd:CommandType;
    target_entity:int32 = null;
    target_world:Dimension = null;

    // if null, command is a read
    write:WriteBody;
}

// ---------------

table StateRequest {
    entities_by_id: bool = false;
    target_world:Dimension = null;
}

union GameRequestBody {Command, StateRequest}

table GameRequest {
    body:GameRequestBody (required);
}

root_type GameRequest;
